# Excel Agent Configuration
# Copy this file to .env and fill in your values

# ==================== Application Settings ====================
EXCEL_AGENT_APP_NAME=Excel Agent
EXCEL_AGENT_ENVIRONMENT=development  # development, staging, production
EXCEL_AGENT_DEBUG=true
EXCEL_AGENT_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ==================== AWS Bedrock Settings ====================
# AWS Credentials (or use AWS CLI profile)
EXCEL_AGENT_AWS_REGION=us-east-1
EXCEL_AGENT_AWS_ACCESS_KEY_ID=your_access_key_here
EXCEL_AGENT_AWS_SECRET_ACCESS_KEY=your_secret_key_here
# EXCEL_AGENT_AWS_SESSION_TOKEN=  # Optional for temporary credentials

# Claude Model Configuration
EXCEL_AGENT_CLAUDE_MODEL_ID=anthropic.claude-3-sonnet-20240229
EXCEL_AGENT_CLAUDE_MAX_TOKENS=4096
EXCEL_AGENT_CLAUDE_TEMPERATURE=0.0
EXCEL_AGENT_CLAUDE_TIMEOUT=300

# Enable prompt caching for better performance
EXCEL_AGENT_ENABLE_PROMPT_CACHING=true

# ==================== File Processing Settings ====================
EXCEL_AGENT_MAX_UPLOAD_SIZE_MB=500
EXCEL_AGENT_MAX_FILES_PER_QUERY=10
EXCEL_AGENT_MAX_ROWS_TO_SAMPLE=1000

# ==================== Search Settings ====================
# Ripgrep configuration
EXCEL_AGENT_ENABLE_RIPGREP=true
EXCEL_AGENT_RIPGREP_BINARY=rg  # or full path: /usr/local/bin/rg
EXCEL_AGENT_RIPGREP_TIMEOUT=30

# Search behavior
EXCEL_AGENT_SEARCH_CONFIDENCE_THRESHOLD=0.3
EXCEL_AGENT_MAX_SEARCH_RESULTS=100
EXCEL_AGENT_ENABLE_FUZZY_MATCHING=true
EXCEL_AGENT_FUZZY_THRESHOLD=80

# ==================== Cache Settings ====================
EXCEL_AGENT_ENABLE_CACHE=true
EXCEL_AGENT_CACHE_TTL_SECONDS=3600
EXCEL_AGENT_CACHE_SIZE_LIMIT_MB=2048
EXCEL_AGENT_MEMORY_CACHE_SIZE=128

# Cache strategies
EXCEL_AGENT_CACHE_EXCEL_METADATA=true
EXCEL_AGENT_CACHE_SEARCH_RESULTS=true
EXCEL_AGENT_CACHE_CSV_FILES=true

# ==================== Agent Settings ====================
EXCEL_AGENT_MAX_AGENT_ITERATIONS=10
EXCEL_AGENT_AGENT_TIMEOUT_SECONDS=300
EXCEL_AGENT_ENABLE_AGENT_VERBOSE=true

# Parallel execution (experimental)
EXCEL_AGENT_ENABLE_PARALLEL_TOOL_EXECUTION=false
EXCEL_AGENT_MAX_PARALLEL_TOOLS=3

# ==================== API Settings ====================
EXCEL_AGENT_API_HOST=0.0.0.0
EXCEL_AGENT_API_PORT=8000
EXCEL_AGENT_API_RELOAD=true
EXCEL_AGENT_API_WORKERS=1

# CORS
EXCEL_AGENT_ENABLE_CORS=true
EXCEL_AGENT_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate limiting
EXCEL_AGENT_ENABLE_RATE_LIMITING=false
EXCEL_AGENT_RATE_LIMIT_PER_MINUTE=60

# ==================== Performance Settings ====================
EXCEL_AGENT_PANDAS_CHUNKSIZE=10000
EXCEL_AGENT_MAX_DATAFRAME_MEMORY_MB=512
EXCEL_AGENT_MAX_WORKERS=4

# ==================== Feature Flags ====================
EXCEL_AGENT_ENABLE_PIVOT_ANALYSIS=true
EXCEL_AGENT_ENABLE_FORMULA_TRACKING=false
EXCEL_AGENT_ENABLE_CHART_EXTRACTION=false

# ==================== Monitoring ====================
EXCEL_AGENT_ENABLE_METRICS=false
EXCEL_AGENT_ENABLE_TRACING=false

# ==================== Security ====================
EXCEL_AGENT_ENABLE_FILE_VALIDATION=true
EXCEL_AGENT_ENABLE_VIRUS_SCAN=false
EXCEL_AGENT_MAX_FILENAME_LENGTH=255